<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="init" author="delonce">
        <createTable tableName="users">
            <column name="id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="login" type="VARCHAR(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(512)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence startValue="1" incrementBy="1" ordered="true" sequenceName="users_seq"/>
    </changeSet>

    <changeSet id="insert" author="delonce">
        <insert tableName="users">
            <column name="id" value="1"/>
            <column name="login" value="admin"/>
            <column name="password" value="admin123"/>
        </insert>

        <insert tableName="users">
            <column name="id" value="2"/>
            <column name="login" value="user1"/>
            <column name="password" value="password1"/>
        </insert>

        <insert tableName="users">
            <column name="id" value="3"/>
            <column name="login" value="testuser"/>
            <column name="password" value="testpass"/>
        </insert>
    </changeSet>

    <changeSet id="update_sequence" author="delonce">
        <sql>ALTER SEQUENCE users_seq RESTART WITH 4</sql>
    </changeSet>

</databaseChangeLog>